{
  "name": "mqttlooter",
  "productName": "MQTTLooter",
  "version": "1.0.0",
  "description": "An MQTT client for exploring topics and messages.",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd src/renderer && cross-env BROWSER=none npm start",
    "dev:electron": "wait-on http://localhost:3000 ; cross-env NODE_ENV=development electron .",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:powershell": "powershell -Command \"$env:NODE_ENV = 'development'; electron .\"",
    "electron:cmd": "cmd /c \"set NODE_ENV=development && electron .\"",
    "build:renderer": "cd src/renderer && npm run build",
    "dist": "npm run build:renderer && electron-builder",
    "pack": "electron-builder --dir",
    "lint": "echo \"No linting configured\""
  },
  "build": {
    "appId": "com.martinjensen37.mqttlooter",
    "productName": "MQTTLooter",
    "copyright": "Copyright Â© 2025 martinjensen37",
    "directories": {
      "output": "dist-builder"
    },
    "files": [
      "src/main/**/*",
      "src/preload/**/*",
      "src/renderer/build/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/MQTTLooter_logo_tiny.ico",
      "publisherName": "martinjensen37"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MQTTLooter",
      "installerIcon": "assets/MQTTLooter_logo_tiny.ico",
      "uninstallerIcon": "assets/MQTTLooter_logo_tiny.ico",
      "installerHeaderIcon": "assets/MQTTLooter_logo_tiny.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "artifactName": "${productName} Setup ${version}.${ext}"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "mqtt": "^5.13.1",
    "react-split-pane": "^0.1.92"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "36.5.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  }
}